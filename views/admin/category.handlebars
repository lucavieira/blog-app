<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/category/add">
    <button class="btn btn-success">New Category</button>
</a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small><br>
            <a href="/admin/category/edit/{{_id}}">
                <button class="btn btn-success mt-4">Edit</button>
            </a>
        </div>
    </div>
{{else}}

{{/each}}